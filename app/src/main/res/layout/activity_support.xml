<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".acitivity.SupportActivity">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:padding="@dimen/_12sdp">

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_left" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_regular"
            android:text="Chat"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />

    </RelativeLayout>


    <LinearLayout
        android:visibility="gone"
        android:padding="@dimen/_14sdp"
        android:layout_below="@+id/rlHeader"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvWhatsapp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/whatsapp_logo"
                    />


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Whatsapp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Join our whatsapp group to get instant offers and updates"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />


                <LinearLayout
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvSharewhatsapp"
                        android:paddingHorizontal="@dimen/_18sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:drawablePadding="@dimen/_4sdp"
                        android:drawableTint="@color/white"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_corner"
                        android:backgroundTint="@color/primary_color"
                        />

                    <TextView
                        android:id="@+id/tvJoinwhatsapp"
                        android:paddingHorizontal="@dimen/_18sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Join"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        android:textAllCaps="false"
                        android:background="@drawable/rounded_corner"
                        android:backgroundTint="@color/secondary_color"
                        />


                </LinearLayout>



            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvTelegram"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/telegram_logo"
                    />


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Telegram"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Join our telegram channel to get instant offers and updates"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />


                <LinearLayout
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvSharetelegram"
                        android:paddingHorizontal="@dimen/_18sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:drawablePadding="@dimen/_4sdp"
                        android:drawableTint="@color/white"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_corner"
                        android:backgroundTint="@color/primary_color"
                        />

                    <TextView
                        android:id="@+id/tvJointelegram"
                        android:paddingHorizontal="@dimen/_18sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Join"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        android:textAllCaps="false"
                        android:background="@drawable/rounded_corner"
                        android:backgroundTint="@color/secondary_color"
                        />


                </LinearLayout>




            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>




</RelativeLayout>