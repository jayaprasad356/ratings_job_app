<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_extra_light"
    tools:context=".gateway.SelectPaymentActivity">




    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_12sdp">

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_left" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_regular"
            android:text="Payment"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />

    </RelativeLayout>


    <RelativeLayout
        android:padding="@dimen/_10sdp"
        android:layout_below="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/cashless_payment"
            />

        <LinearLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pay"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_12sdp"
                />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_16sdp"
                />


        </LinearLayout>




    </RelativeLayout>



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvpayment"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:padding="@dimen/_10sdp"
                android:id="@+id/gpay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icons8_google_pay"
                    />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPay"
                    android:textColor="@color/black"
                    />


                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/baseline_keyboard_arrow_right_24"
                    android:backgroundTint="@color/grey_light"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:padding="@dimen/_10sdp"
                android:id="@+id/phonepe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icons8_phone_pe"
                    />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phonepe"

                    android:textColor="@color/black"
                    />


                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/baseline_keyboard_arrow_right_24"
                    android:backgroundTint="@color/grey_light"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:padding="@dimen/_10sdp"
                android:id="@+id/paytm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/icons8_paytm"
                    android:layout_centerVertical="true"

                    />

                <TextView
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Paytm"
                    android:textColor="@color/black"
                    />


                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/baseline_keyboard_arrow_right_24"
                    android:backgroundTint="@color/grey_light"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:padding="@dimen/_10sdp"
                android:id="@+id/bhim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/icons8_bhim"
                    android:layout_centerVertical="true"

                    />

                <TextView
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Bhim"
                    android:textColor="@color/black"
                    />


                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/baseline_keyboard_arrow_right_24"
                    android:backgroundTint="@color/grey_light"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:padding="@dimen/_10sdp"
                android:id="@+id/upi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/scanqr"
                    />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan QR"
                    android:textColor="@color/black"
                    />


                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/baseline_keyboard_arrow_right_24"
                    android:backgroundTint="@color/grey_light"
                    />


            </RelativeLayout>



        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>