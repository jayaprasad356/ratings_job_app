<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/_14sdp"
    tools:context=".Acitivity.OtpActivity">


    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_12sdp">

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_left" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_regular"
            android:text="verify Otp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />

    </RelativeLayout>




    <ScrollView
        android:scrollbars="none"
        android:layout_below="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:orientation="vertical">


        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ivLogo"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_centerHorizontal="true"
             />

        <TextView
            android:id="@+id/tvMobile"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/_14sdp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="we have just sent a 6 digit code to your
enter number . Enter the code below"
            android:textSize="@dimen/_10sdp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            />


        <in.aabhasjindal.otptextview.OtpTextView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            app:bar_height="2dp"
            app:height="40dp"
            app:length="6"
            app:otp_box_background="@drawable/edittext_curve_bg"
            app:otp_text_size="24dp"
            app:width="40dp" />


        <TextView
            android:id="@+id/btnResend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donâ€™t  receive any code  ? Resent"
            android:textSize="@dimen/_12sdp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_20sdp"
            />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:backgroundTint="@color/primary_color"
            android:fontFamily="@font/poppins_medium"
            android:paddingVertical="@dimen/_10sdp"
            android:text="Verify"
            android:textAllCaps="false"
            app:cornerRadius="@dimen/_10sdp" />


    </LinearLayout>


    </ScrollView>


</RelativeLayout>